{
  "compilerOptions": {
    // Target modern JavaScript (ES2022) instead of the default ES3
    "target": "ES2022",
    // Use Node16 module system for modern ESM support
    "module": "NodeNext",
    // Align module resolution with Node16
    "moduleResolution": "nodenext",
    // Output compiled files to the "dist" directory
    "outDir": "dist",
    // Specify "src" as the root directory for input files
    "rootDir": "src",
    // Generate declaration (.d.ts) files for type definitions
    "declaration": true,
    // Create source maps for declaration files
    "declarationMap": true,
    // Produce source maps for debugging
    "sourceMap": true,
    // Include original TypeScript sources in the source maps
    "inlineSources": true,
    // Enable all strict type-checking options for better type safety
    "strict": true,
    // Allow default imports from CommonJS modules for compatibility
    "esModuleInterop": true,
    // Enable importing JSON modules
    "resolveJsonModule": true,
    // Enforce consistent file name casing to avoid issues on case-insensitive systems
    "forceConsistentCasingInFileNames": true,
    // Skip type checking of declaration files to speed up compilation
    "skipLibCheck": true,
    // Enable incremental compilation for faster rebuilds
    "incremental": true,
    // Preserve symbolic links when resolving modules, matching Node.js behavior
    "preserveSymlinks": true,
  },
  // Include all TypeScript files in the "src" directory and its subdirectories
  "include": [
    "./src/**/*"
  ],
  // Exclude specific directories and test files from compilation
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}